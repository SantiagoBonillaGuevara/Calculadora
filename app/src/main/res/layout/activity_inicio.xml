<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".Inicio">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4">

        <ImageView
            style="@style/imageGrid"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/el_pianista" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/et" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/american_psyco" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/casablanca" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/pulp_fiction" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/rocky" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/scarface" />

        <ImageView
            style="@style/imageGrid"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/star_wars" />

    </GridLayout>

</LinearLayout>